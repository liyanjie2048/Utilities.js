{
    "compileOnSave": true,
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": false,
        "outDir": "./dist",
        "sourceMap": true,
        "target": "ES5"
    },
    "exclude": [
        "bundles",
        "dist",
        "node_modules",
        "gulpfile.js",
        "rollup.config.js"
    ]
}
